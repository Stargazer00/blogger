<h1><%= @show_current_article.title %></h1>
<p>
  Tags:
  <% @show_current_article.tags.each do |tag| %>
    <%= link_to tag.name, tag_path(tag) %>
  <% end %>
</p>

<p>
  <% if @show_current_article.image.exists? %>
    <%= image_tag @show_current_article.image.url (:medium)%>
  <% end %>
</p>
<p><%= @show_current_article.body %></p>

<%= link_to "Delete", article_path(@show_current_article), method: :delete, data: {confirm: "Really? delete the article?"} %>
<%= link_to "Edit", edit_article_path(@show_current_article) %>
<br/>
<%= render partial: 'comments/form' %>
<br/>
<%= link_to "<< Back to Articles List", articles_path %>

<h3>Comments (<%= @show_current_article.comments.size %>)</h3>
<%= render partial: 'articles/comment', collection: @show_current_article.comments %>
